---
import Layout from "../layouts/Layout.astro";

---

<Layout title="About">
  <div class="container">
    <p>ABOUT</p>
    <a href="/">Home</a>
  </div>
</Layout>

<style lang="scss">
  .container {
    width: 100%;
    height: 100%;
    background-color: #1e1e1e;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  p {
    color: #fefefe;
    font-size: 5rem;
  }

  a {
    position: relative;
    text-decoration: none;
    color: #fefefe;
    font-size: 2.5rem;
    font-weight: 100;
    line-height: 1;
    opacity: 0.3;
    padding-left: 1.5rem;
    transition: opacity 0.5s ease;
    &:hover {
      opacity: 0.7;
      &::before {
        rotate: 40deg;
      }
      &::after{
        rotate: -40deg;
      }
    }
    &::before, &::after {
      content: '';
      position: absolute;
      left: 0;
      top: 1.4rem;
      width: 1rem;
      height: 1px;
      background-color: currentColor;
      transform-origin: left;
      transition: rotate 0.3s ease;
    }
  }
</style>